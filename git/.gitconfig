[core]
   editor = vim

[pager]
    diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX

[merge]
    tool = vimdiff

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    pager = true

[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold

[color "branch"]
    remote = yellow

[push]
    default = simple

[includeIf "gitdir:~/Documents/Repos/github.com/a-castellano/"]
